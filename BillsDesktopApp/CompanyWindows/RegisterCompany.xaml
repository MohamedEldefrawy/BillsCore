<Window x:Class="BillsDesktopApp.CompanyWindows.RegisterCompany"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
       Title="تسجيل الشركة" MinWidth="300" MinHeight="250" Width="300" Height="250" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="12"
        FontFamily="{materialDesign:MaterialDesignFont}" 
        ScrollViewer.HorizontalScrollBarVisibility="Auto"
        WindowStartupLocation="CenterScreen" HorizontalContentAlignment="Stretch" 
        VerticalContentAlignment="Stretch">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.20*"/>
            <RowDefinition Height="0.40*"/>
            <RowDefinition Height="0.40*"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="10" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <Label x:Name="lblUserName"  Content="asdasdas" Margin="5"
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MinHeight="26.8"/>
        </DockPanel>

        <DockPanel Margin="10" Grid.Row="1" Grid.Column="1">
            <Label x:Name="lblCompanyName" Content="إسم الشركة" Margin="5" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </DockPanel>

        <DockPanel Margin="10" Grid.Row="1" Grid.Column="0">
            <TextBox
                x:Name="txtCompanyName"  Margin="5" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </DockPanel>

        <DockPanel Margin="10" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Button x:Name="btnRegister" Content="تسجيل" Margin="5" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="btnRegister_Click"/>
        </DockPanel>
    </Grid>
</Window>
